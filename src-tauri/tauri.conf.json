{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "The Lost Project",
  "version": "0.1.50",
  "identifier": "com.foundtech.tlpapp",
  "build": {
    "frontendDist": "../dist",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "mkdir -p dist && cat > dist/index.html << 'EOF'\n<!DOCTYPE html>\n<html>\n<head>\n  <meta charset=\"UTF-8\">\n  <title>The Lost Project</title>\n  <meta http-equiv=\"refresh\" content=\"0; url=https://app.thelostproject.in\">\n  <script>window.location.href='https://app.thelostproject.in';</script>\n</head>\n<body>\n  <p>Redirecting to The Lost Project...</p>\n</body>\n</html>\nEOF"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "The Lost Project",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "incognito": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "default",
        "main-capability"
      ]
    },
    "withGlobalTauri": false
  },
  "bundle": {
    "active": true,
    "targets": ["dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13",
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    }
  }
}
