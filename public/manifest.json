{
    "name": "Video Production App",
    "short_name": "VidPro",
    "description": "Professional video production and project management application",
    "start_url": "/",
    "scope": "/",
    "display": "standalone",
    "orientation": "portrait-primary",
    "theme_color": "#000000",
    "background_color": "#ffffff",
    "categories": [
        "productivity",
        "business"
    ],
    "screenshots": [
        {
            "src": "/icons/screenshot1.png",
            "sizes": "540x720",
            "form_factor": "narrow",
            "type": "image/png"
        },
        {
            "src": "/icons/screenshot2.png",
            "sizes": "1280x720",
            "form_factor": "wide",
            "type": "image/png"
        }
    ],
    "icons": [
        {
            "src": "/icons/icon-192x192.png",
            "sizes": "192x192",
            "type": "image/png",
            "purpose": "any"
        },
        {
            "src": "/icons/icon-512x512.png",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "any"
        },
        {
            "src": "/icons/maskable-icon-192x192.png",
            "sizes": "192x192",
            "type": "image/png",
            "purpose": "maskable"
        },
        {
            "src": "/icons/maskable-icon-512x512.png",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "maskable"
        }
    ],
    "share_target": {
        "action": "/share",
        "method": "POST",
        "enctype": "multipart/form-data",
        "params": {
            "title": "title",
            "text": "text",
            "url": "url",
            "files": [
                {
                    "name": "media",
                    "accept": [
                        "image/*",
                        "video/*"
                    ]
                }
            ]
        }
    },
    "shortcuts": [
        {
            "name": "Create Project",
            "short_name": "New Project",
            "description": "Create a new video project",
            "url": "/dashboard?action=new-project",
            "icons": [
                {
                    "src": "/icons/create-project.png",
                    "sizes": "192x192",
                    "type": "image/png"
                }
            ]
        },
        {
            "name": "Dashboard",
            "short_name": "Dashboard",
            "description": "View your projects",
            "url": "/dashboard",
            "icons": [
                {
                    "src": "/icons/dashboard.png",
                    "sizes": "192x192",
                    "type": "image/png"
                }
            ]
        }
    ],
    "prefer_related_applications": false
}